;; variables
(defpoll date
  :interval "60s"
  `date +'{"week_day":"%a","month":"%b","day":"%d"}'`
)

(defpoll time
  :interval "30s"
  `date +'{"hour":"%H","minute":"%M"}'`
)

(defpoll media_info
  :interval "800ms"
  "sh ~/.config/eww-modules/media/media_info.sh"
)

;; window
(defwindow bar
  :class "bar"
  :monitor 0
  :exclusive true
  :geometry (geometry
      :x "0%"
      :y "0%"
      :width "1890px"
      :height "50px"
      :anchor "top center"
  )
  :stacking "fg"
  :reserve (struts
      :distance "40px"
      :side "top"
  )
  :windowtype "dock"
  :wm-ignore false
  (center-box)
)

;; layout
(defwidget center-box []
  (centerbox
    :class "center_box"
    :orientation "h"
    (left)
    (center)
    (right)
  )
)

(defwidget left []
  (box
    :orientation "h"
    :class "left"
    :space-evenly false
    :halign "start"
  )
)

(defwidget center []
  (box
    :orientation "h"
    :class "center"
    :space-evenly false
    :halign "center"
    (datetime)
  )
)

(defwidget right []
  (box
    :orientation "h"
    :class "right"
    :space-evenly false
    :halign "end"
    (media)
  )
)

;; widgets
(defwidget datetime []
  (box
    :orientation "h"
    :class "datetime"
    :space-evenly false
    :spacing 10
    (label
      :text "${date.week_day} ${date.month} ${date.day}"
    )
    (label
      :text "|"
    )
    (label
      :text "${time.hour}:${time.minute}"
    )
  )
)

(defwidget media []
  (box
    ;; :visible {"${media_info.status}" != "" ? true : false}
    :orientation "h"
    :class "media"
    :space-evenly false
    (button
      :onclick "playerctl play-pause"
      (box
        :space-evenly false
        :spacing 10
        (label
          :text "${media_info.position}/${media_info.length}"
        )
        (label
          :text {"${media_info.status}" == "playing" ? "󰏥" : "󰐌"}
        )
        (label
          :text "${media_info.artist} - ${media_info.title}"
        )
      )
    )
  )
)
